{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "./built",
    "allowJs": false,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "declaration": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/*"]
}
